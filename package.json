{
  "name": "mi-granja-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "format": "biome format --write .",
    "dev:dashboard": "turbo run dev --filter=@mi-granja/dashboard",
    "dev:landing": "turbo run dev --filter=@mi-granja/landing",
    "build:dashboard": "turbo run build --filter=@mi-granja/dashboard",
    "build:landing": "turbo run build --filter=@mi-granja/landing",
    "emulators": "cd firebase && firebase emulators:start --import=data --export-on-exit=data",
    "emulators:start": "cd firebase && firebase emulators:start",
    "emulators:kill": "lsof -ti :9099 -ti :8080 -ti :9199 -ti :4000 -ti :4400 -ti :4500 | xargs kill 2>/dev/null; echo 'âœ… Emuladores detenidos'",
    "seed": "npx tsx scripts/seed-emulators.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "firebase-tools": "^13.30.0",
    "tsx": "^4.19.0",
    "turbo": "^2.5.0"
  }
}
