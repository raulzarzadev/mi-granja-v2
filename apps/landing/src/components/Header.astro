---
const navLinks = [
  { label: 'Funcionalidades', href: '#funcionalidades' },
  { label: 'Especies', href: '#especies' },
  { label: 'Beneficios', href: '#beneficios' },
  { label: 'Preguntas', href: '#faq' },
]
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center gap-2" aria-label="Mi Granja - Inicio">
        <img src="/logo/logo-migranja-verde.svg" alt="Mi Granja" class="h-10" />
      </a>

      <nav class="hidden md:flex items-center gap-8" aria-label="NavegaciÃ³n principal">
        {navLinks.map((link) => (
          <a href={link.href} class="text-sm font-medium text-gray-600 hover:text-green-700 transition-colors">
            {link.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-3">
        <a
          href="https://panel.migranja.app/auth"
          class="text-sm font-medium text-gray-600 hover:text-green-700 transition-colors"
        >
          Iniciar Sesion
        </a>
        <a
          href="https://panel.migranja.app/auth"
          class="rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-700 transition-colors"
        >
          Registrarse Gratis
        </a>
      </div>
    </div>
  </div>
</header>
